<Page x:Class="WpfApplication1.ChangePass"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ChangePass" FontSize="20" Foreground="AliceBlue">
    <StackPanel Margin="0,50,0,0">
        <TextBlock Text="Thay đổi mật khẩu" HorizontalAlignment="Center" FontSize="48"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="Nhập mật khẩu mới: " Width="200"/>
                <PasswordBox x:Name="NewPassBox" Width="200"   GotFocus="NewPassBox_GotFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Nhập lại mật khẩu: " Width=" 200" VerticalAlignment="Bottom" />
                <PasswordBox x:Name="ReNewPassBox" Width="200"  Margin="0,20,0,0" GotFocus="ReNewPassBox_GotFocus"/>
            </StackPanel>
            <Button x:Name="XacNhanButton" Content="OK" Width="50" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </StackPanel>
</Page>
