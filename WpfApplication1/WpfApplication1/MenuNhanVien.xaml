<Page x:Class="WpfApplication1.MenuNhanVien"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MenuNhanVien" Foreground="AliceBlue" FontSize="20">

    <Grid >
        
        <StackPanel Margin="0,50,0,0" >
            <TextBlock Text="Menu Nhân Viên" TextWrapping="Wrap" x:Name="Header" HorizontalAlignment="Center" FontSize="48"/>
            <StackPanel x:Name="Menu" Margin="0,50,0,0">
                <Button x:Name="TraCuuButton" Content="Tra cứu hàng" Width="120" Click="TraCuuButton_Click" />
                <Button x:Name="BanHangButton" Content="Bán hàng" Width="120" Margin="0,20,0,0" Click="BanHangButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
